@model IEnumerable<Almacen.Models.Movimiento>

@{
    ViewData["Title"] = "Kardex";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Kardex del Artículo</h2>

    <a asp-controller="Articulos" asp-action="Lista" class="btn btn-warning mb-3">Volver</a>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title">Movimientos del Artículo</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Tipo</th>
                        <th>Cantidad</th>
                        <th>Artículo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movimiento in Model)
                    {
                        <tr>
                            <td>@movimiento.Fecha.ToString("dd/MM/yyyy")</td>
                            <td>@movimiento.Tipo</td>
                            <td>@movimiento.Cantidad</td>
                            <td>@movimiento.Articulo.Nombre</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
