@model Almacen.Models.Articulo

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="h4 text-center">Agregar Producto</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Articulos" asp-action="Nuevo" method="post">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre del Artículo</label>
                        <input asp-for="Nombre" class="form-control" type="text" placeholder="Ingrese el nombre del artículo" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CategoriaId" class="form-label">Categoría</label>
                        <select asp-for="CategoriaId" class="form-select" asp-items="@(new SelectList(ViewBag.Categorias, "Id", "Nombre"))">
                            <option value="">Seleccione una categoría</option>
                        </select>
                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Cantidad" class="form-label">Cantidad</label>
                        <input asp-for="Cantidad" class="form-control" type="number" min="0" placeholder="Ingrese la cantidad" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UbicacionId" class="form-label">Ubicación</label>
                        <select asp-for="UbicacionId" class="form-select" asp-items="@(new SelectList(ViewBag.Ubicaciones, "Id", "Nombre"))">
                            <option value="">Seleccione una ubicación</option>
                        </select>
                        <span asp-validation-for="UbicacionId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FechaEntrada" class="form-label">Fecha de Entrada</label>
                        <input asp-for="FechaEntrada" class="form-control" type="date" />
                        <span asp-validation-for="FechaEntrada" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Articulos" asp-action="Lista" class="btn btn-secondary">Volver</a>
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
